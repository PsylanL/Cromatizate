datasource db {
  provider = "postgresql"
}

generator client {
  provider = "prisma-client-js"
}

model Visitor {
  id              String    @id
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt
  colorBlindness  String?
  preferences     Json?
  deviceInfo      Json?
  notes           String?

  interactions    VisitorInteraction[]
  semanticOutputs SemanticOutput[]
  progress        VisitorProgress[]
  contentItems    ContentItem[]
  sessions        Session[]
  recommendations Recommendation[]
}

model Session {
  id        String   @id @default(cuid())
  userId    String
  user      Visitor  @relation(fields: [userId], references: [id], onDelete: Cascade)
  metadata  Json
  createdAt DateTime @default(now())

  @@map("Sessions")
}

model VisitorInteraction {
  id        String   @id @default(cuid())
  visitorId String
  type      String
  payload   Json
  createdAt DateTime @default(now())

  visitor   Visitor @relation(fields: [visitorId], references: [id], onDelete: Cascade)
}

model SemanticOutput {
  id              String   @id @default(cuid())
  visitorId       String
  inputType       String
  inputData       Json
  jsonld          Json
  recommendations Json?
  createdAt       DateTime @default(now())

  visitor Visitor @relation(fields: [visitorId], references: [id], onDelete: Cascade)
}

model VisitorProgress {
  id        String   @id @default(cuid())
  visitorId String
  step      String
  completed Boolean
  metadata  Json?
  createdAt DateTime @default(now())

  visitor Visitor @relation(fields: [visitorId], references: [id], onDelete: Cascade)
}

model ContentItem {
  id        String   @id @default(cuid())
  visitorId String
  source    String
  metadata  Json?
  createdAt DateTime @default(now())

  visitor   Visitor @relation(fields: [visitorId], references: [id], onDelete: Cascade)
}

model Ontology {
  id        String   @id @default(cuid())
  domain    String   // "colorBlindness", "colors", "visualContent"
  name      String
  version   String   @default("1.0")
  jsonld    Json     // Ontología en JSON-LD
  rules     Json?    // Reglas de adaptación
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([domain, version])
  @@index([domain])
}

model Recommendation {
  id         String   @id @default(cuid())
  visitorId  String
  type       String   // "palette", "contrast", "saturation", "textual"
  content    Json     // Recomendación específica
  confidence Float    @default(0.5)
  source     String   // "interaction", "ontology", "default"
  createdAt  DateTime @default(now())
  visitor    Visitor  @relation(fields: [visitorId], references: [id], onDelete: Cascade)

  @@index([visitorId, type])
  @@index([visitorId, createdAt])
}
