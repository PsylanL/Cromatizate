datasource db {
  provider = "postgresql"
}

generator client {
  provider = "prisma-client-js"
}

model Visitor {
  id              String    @id
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt
  colorBlindness  String?
  preferences     Json?
  deviceInfo      Json?
  notes           String?

  interactions    VisitorInteraction[]
  semanticOutputs SemanticOutput[]
  progress        VisitorProgress[]
  contentItems    ContentItem[]   // ‚Üê ESTA ERA LA QUE FALTABA
}

model VisitorInteraction {
  id        String   @id @default(cuid())
  visitorId String
  type      String
  payload   Json
  createdAt DateTime @default(now())

  visitor   Visitor @relation(fields: [visitorId], references: [id], onDelete: Cascade)
}

model SemanticOutput {
  id              String   @id @default(cuid())
  visitorId       String
  inputType       String
  inputData       Json
  jsonld          Json
  recommendations Json?
  createdAt       DateTime @default(now())

  visitor Visitor @relation(fields: [visitorId], references: [id], onDelete: Cascade)
}

model VisitorProgress {
  id        String   @id @default(cuid())
  visitorId String
  step      String
  completed Boolean
  metadata  Json?
  createdAt DateTime @default(now())

  visitor Visitor @relation(fields: [visitorId], references: [id], onDelete: Cascade)
}

model ContentItem {
  id        String   @id @default(cuid())
  visitorId String
  source    String
  metadata  Json?
  createdAt DateTime @default(now())

  visitor   Visitor @relation(fields: [visitorId], references: [id], onDelete: Cascade)
}
